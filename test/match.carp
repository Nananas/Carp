;; TESTS
(use IO)
(load "Test.carp")
(use Test)

(load "../examples/match.carp")

(defn test-match-array-int [xs]
  (match-array xs
    [1 _ 1 _] true
    [1 _ 0 _] true
    [_ _ 4]   true
    false))

(defn test-match-array-str [xs]
  (match-array xs
    [_ _ @"baz"] true
    false))

(defn test-match-array-destr [xs]
  (match-array xs
    [_ a b 0] (+ a b)     ;; destructure value into a variable
    [a _ _ 1] a
    -1))

(defn test-match-array-destr-ref [xs]
  (let [a 2]
    (match-array [a] xs  ;; reference a as value, not as destructured variable
      [_ a _ 0] true
      false)))

(defn test-match-array-destr-str [xs]
    (match-array xs
      [_ a @"baz"] (= a @"bar")
      false))

(defn test-match-array-end* [xs]
  (match-array xs
    [_ 2 *] false
    [_ 1 *] true
    false))

(defn test-match-array-start* [xs]
  (match-array xs
    [* 3 _] false
    [* 2 _] true
    false))

(defn test-match-array-middle* [xs]
  (match-array xs
    [_ * 4] false
    [_ * 3] true
    false))

(defn test-match-array-string-middle* [xs]
  (match-array xs
    [_ * @"foo"] false
    [_ * @"baz"] true
    false))

